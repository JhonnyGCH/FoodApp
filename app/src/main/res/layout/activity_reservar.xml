<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservar">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/head" />

    <LinearLayout


        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="634dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677">

        <TextView
            android:id="@+id/nombre_reserva"

            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"

            android:layout_marginBottom="20dp"
            android:text="@string/nombre_reserva"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagen_tienda"
            android:layout_width="322dp"
            android:layout_height="177dp"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/content_description_media"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imagenrestaurante" />


        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:gravity="center|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/spinner">


            <TextView
                android:id="@+id/horaReserva"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:background="#4CAF50"
                android:text="@string/reserva_hora"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"

                android:background="#9CCD9E"
                android:text="8:00 PM"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/division"
            android:layout_width="344dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/restUbi"
            tools:ignore="MissingConstraints"></LinearLayout>

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="55dp"

            android:gravity="center|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/spinner">

            <EditText
                android:id="@+id/NombreUsu"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Nombre*"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/TelefonoUsu"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="Telefono*"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="55dp"

            android:gravity="center|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/Numero">

            <EditText
                android:id="@+id/Numero"
                android:layout_width="116dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="NÂ° Personas*"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />
            <EditText
            android:id="@+id/TipoCelbracion"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Celebracion*"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


        <EditText
            android:id="@+id/Comentarioreserva"
            android:layout_width="263dp"
            android:layout_height="78dp"

            android:layout_marginTop="10dp"
            android:background="#9CCD9E"
            android:backgroundTint="#D0E1D1"
            android:ems="10"
            android:hint="Comentarios (Adicional)"

            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"

            />

        <Button

            android:id="@+id/ReservarBtn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/principal"
            android:onClick="reservar"
            android:text="@string/btn_reservar"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>